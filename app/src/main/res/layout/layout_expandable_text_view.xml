<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.dshovhenia.playgroundapp.ui.details.custom_view.ExpandableTextView
        android:id="@+id/layout_expandable_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingStart="0dp"
        android:paddingEnd="24dp"
        android:textColor="@color/colorPrimaryText"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/layout_expandable_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_expand_more_black_24dp"
        app:layout_constraintBottom_toBottomOf="@id/layout_expandable_text"
        app:layout_constraintEnd_toEndOf="@id/layout_expandable_text" />

</androidx.constraintlayout.widget.ConstraintLayout>